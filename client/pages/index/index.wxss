/* pages/index/index.wxss */
/* 导航栏布局相关 */
.navbar {
  position: relative;
  width: 100%;
  height: 90rpx;
  /* 文本不换行 */
  white-space: nowrap;
  display: flex;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  background: #fff;
  align-items: center;
  /* 固定在顶部 */
  /* position: fixed;
  left: 0rpx;
  top: 0rpx; */

}

.nav-item {
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 100%;
  display: inline-block;
  /* 普通文字大小 */
  font-size: 28rpx;
}

.nav-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 4rpx;
  box-sizing: border-box;
}

.tab-on {
  color: #fbbd08;
  /* 选中放大 */
  font-size: 38rpx !important;
  font-weight: 600;
  border-bottom: 4rpx solid #fbbd08 !important;
}

.write {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.item_detail {
  padding: 20rpx 0;
  border-bottom: 4rpx solid #F2F2F2;
  color: #777;
  margin: 0 30rpx;
}

.item_detail .user_info {
  display: flex;
}

.item_detail .user_info .user_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.item_detail .user_info .user_img image {
  width: 100%;
  height: 100%;
}

.item_detail .user_info .box {
  display: flex;
  justify-content: space-between;
  width: 600rpx;
}

.item_detail .user_info .user-box {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.item_detail .user_info .user-name {
  color: #333;
}

.item_detail .user_info .date {
  font-size: 26rpx;
  color: #999;
  margin-top: 4rpx;
}

.item_detail .user_info .focus {
  width: 100rpx;
  height: 38rpx;
  background: #FFCC33;
  font-size: 26rpx;
  border-radius: 16rpx;
  text-align: center;
  line-height: 38rpx;
}

.item_detail .main {
  width: 600rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  margin: 20rpx 0;
}

.item_detail .options {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 26rpx;
}

.thumbs,
.comment,
.share {
  display: flex;
  justify-content: center;
  align-items: center;
}

.options image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
}

.huati {
  padding: 0 20rpx;
  margin: 20rpx;
}

.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.topic {
  display: flex;

}

.topicItem {
  font-size: 12px;
  box-sizing: border-box;
  background: rgba(228, 228, 228, 1);
  width: 230rpx;
  height: 120rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.comment {
  margin-top: 16rpx;
  font-family: '微软雅黑 Bold', '微软雅黑 Regular', '微软雅黑';
  font-weight: 700;
  font-size: 14px;
  color: #666666;
  text-align: left;
}
.theme{
  color:#4A77B0;
}
.imgs{
  display: flex;
  flex-wrap: wrap;
}
.userAddImg{
  width: 200rpx;
  height: 200rpx;
  margin: 5rpx 20rpx;
 
}
