/* pages/topicDetail/topicDetail.wxss */
.topic-box {
  padding-bottom: 120rpx;
}
.topic_list {
  padding: 0 30rpx;
}
.topic_item {
  display: flex;
  border-bottom: 12rpx solid #F2F2F2;
  padding: 40rpx 0 12rpx;
}
.topic_item .left {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.topic_item .left image {
  width: 100%;
  height: 100%;
}
.topic_item .right {
  flex: 1;
  margin-left: 22rpx;
}
.topic_item .right .title_box .title {
  font-size: 32rpx;
  font-weight: bold;
}
.topic_item .right .title_box .recommend {
  color: red;
  margin-left: 16rpx;
}
.topic_item .right .content {
  color: #999;
  font-size: 26rpx;
  width: 540rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  box-sizing: border-box;
  margin-top: 8rpx;
}
.topic_item .right .statistics {
  color: #999;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.topic_item .right .statistics .discussion {
  font-weight: bold;
  margin-right: 12rpx;
}


.item_detail {
  padding: 20rpx 0;
  border-bottom: 4rpx solid #F2F2F2;
  color: #777;
  margin: 0 30rpx;
}
.item_detail .user_info {
  display: flex;
}
.item_detail .user_info .user_img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.item_detail .user_info .user_img  image {
  width: 100%;
  height: 100%;
}
.item_detail .user_info .box {
  display: flex;
  justify-content: space-between;
  width: 600rpx;
}
.item_detail .user_info .user-box {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.item_detail .user_info .user-name {
  color: #333;
}
.item_detail .user_info .date {
  font-size: 26rpx;
  color: #999;
  margin-top: 4rpx;
}
.item_detail .user_info .focus {
  width: 100rpx;
  height: 38rpx;
  background: #FFCC33;
  font-size: 26rpx;
  border-radius: 16rpx;
  text-align: center;
  line-height: 38rpx;
}
.item_detail .main {
  width: 600rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  margin: 20rpx 0;
}
.item_detail .options {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 26rpx;
}
.thumbs,.comment,.share {
  display: flex;
  justify-content: center;
  align-items: center;
}
.options image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
}
.publish_btn {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.publish_btn .text {
  width: 90%;
  height: 84rpx;
  line-height: 84rpx;
  background: #aaa;
  font-size: 36rpx;
  text-align: center;
  color: #fff;
  border-radius: 60rpx;
  box-sizing: border-box;
}