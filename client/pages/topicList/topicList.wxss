.topic_list {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.topic_item {
  display: flex;
  border-bottom: 12rpx solid #F2F2F2;
  padding: 40rpx 0 24rpx;
}
.topic_item .left {
  width: 130rpx;
  height: 130rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.topic_item .left image {
  width: 100%;
  height: 100%;
}
.topic_item .right {
  flex: 1;
  margin-left: 22rpx;
}
.topic_item .right .title_box .title {
  font-size: 32rpx;
  font-weight: bold;
}
.topic_item .right .title_box .recommend {
  color: red;
  margin-left: 16rpx;
}
.topic_item .right .content {
  color: #999;
  font-size: 26rpx;
  width: 540rpx;
  white-space: nowrap; 
  text-overflow: ellipsis;
  overflow: hidden;
  box-sizing: border-box;
  margin: 10rpx 0;
}
.topic_item .right .statistics {
  color: #999;
  font-size: 26rpx;
}
.topic_item .right .statistics .discussion {
  font-weight: bold;
  margin-right: 12rpx;
}
.bottom {
  color: #999;
  font-size: 26rpx;
  text-align: center;
}